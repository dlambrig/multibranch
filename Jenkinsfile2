pipeline {
 agent none
stages {
        stage('feature') {
            when { 
              expression {
                return env.GIT_BRANCH == "origin/feature"
              }
            }
            agent {
    kubernetes {
      yaml '''
      spec:
        containers:
        - name: alpine
          image: centos7
'''
    }
            }   
            steps { 
               echo "I am a feature branch2"
            }
        }
        stage('main') {
            when {
              expression {
                return env.GIT_BRANCH == "origin/main"
              }
            } 
            agent {
    kubernetes {
      yaml '''
      spec:
        containers:
        - name: alpine
          image: centos7
'''
    }
            }              
            steps { 
               echo "I am a main branch"
            }
        }
    }
}

